      const candidates = [];
      if (location.protocol === 'https:') { candidates.push(httpsUrl, httpUrl); }
      else { candidates.push(httpUrl, httpsUrl); }

      for (const u of candidates) {
        try {
          await fetchWithTimeout(u, { method: 'GET', mode: 'no-cors', cache: 'no-store' }, 2500);
          return true;
        } catch (_e) {
        }
      }
      return false;
